{
  "compilerOptions": {

    "target": "es2016",                                 
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",                               
    "esModuleInterop": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }, 
    "typeRoots": ["./node_modules/@types", "./src/types"]                             
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules"]
}
